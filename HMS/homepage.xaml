<Window x:Class="HMS.homepage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMS"
        mc:Ignorable="d"
             Title="Homepage" Height="700" Width="1000" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" ShowInTaskbar="True">
    <Window.Background>
        <ImageBrush ImageSource="media/gradientbg.png"/>
    </Window.Background>
    <Grid>
        <Label Content="HMS" Foreground="Black" FontSize="88" FontWeight="Bold" Margin="383,70,383,0" VerticalAlignment="Top"/>
        <Image Source="media/logo.png" HorizontalAlignment="Left" Height="258" Margin="0,10,0,0" VerticalAlignment="Top" Width="317"/>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="114" Margin="378,374,377,0">
            <Button Content="Doctor" BorderThickness="0" TabIndex="2" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="94" Width="245" Click="Button_Click_1" />
        </Border>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="113" Margin="378,235,377,0">
            <Button Content="Patient" BorderThickness="0" TabIndex="1" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" Height="94" Margin="1,0,1,0" Click="Button_Click"  />
        </Border>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="114" Margin="377,514,378,0">
            <Button Content="Admin" BorderThickness="0" TabIndex="3" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="94" Width="245" Click="Button_Click_2" />
        </Border>
    </Grid>
</Window>