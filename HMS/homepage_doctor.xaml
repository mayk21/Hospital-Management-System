<Window x:Class="HMS.homepage_doctor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMS"
        mc:Ignorable="d"             
        Title="Homepage doctor" Height="700" Width="1000" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" ShowInTaskbar="True">

    <Window.Background>
        <ImageBrush ImageSource="media/gradientbg.png"/>
    </Window.Background>

    <Grid>
        <Label Content="Doctor" Foreground="Black" FontSize="88" FontWeight="Bold" Margin="348,78,349,0" VerticalAlignment="Top"/>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Center" Padding="0" Height="113" Margin="277,0,277,0">
            <Button Content="View Appointments" BorderThickness="0" TabIndex="1" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="94" 
                    Width="425" Click="Button_Click" />
        </Border>


        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="113" Margin="277,446,277,0">
            <Button Content="Prescriptions" BorderThickness="0" TabIndex="2" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="92" 
                    Width="425" Click="Button_Click_1"/>
        </Border>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="58" Margin="830,34,37,0">
            <Button Content="Sign out" TabIndex="3" BorderThickness="0" FontSize="25" FontWeight="Bold" Margin="6,1,0,1" Background="#FFDDDDDD" Foreground="Black" 
                    HorizontalAlignment="Left" Width="114" Click="Button_Click_2" />
        </Border>

    </Grid>
</Window>