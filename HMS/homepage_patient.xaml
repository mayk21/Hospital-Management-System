<Window x:Class="HMS.homepage_patient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMS"
        mc:Ignorable="d"
                            Title="Homepage patient" Height="700" Width="1000" WindowStartupLocation="CenterScreen" Icon="media/icon.png" ResizeMode="CanResize" ShowInTaskbar="True">

    <Window.Background>
        <ImageBrush ImageSource="media/gradientbg.png"/>
    </Window.Background>

    <Grid>
        <Label Content="Patient" Foreground="Black" FontSize="88" FontWeight="Bold" Margin="339,63,342,0" VerticalAlignment="Top"/>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="113" Margin="276,229,278,0">
            <Button Content="View Prescriptions" BorderThickness="0" TabIndex="2" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="94" Width="426" 
                    Click="Button_Click_2" />
        </Border>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="113" Margin="277,356,277,0">
            <Button Content="Book Appointment" BorderThickness="0" TabIndex="2" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="92" Width="426" 
                    Click="Button_Click_1" />
        </Border>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="113" Margin="277,484,277,0">
            <Button Content="Update Information" BorderThickness="0" TabIndex="3" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="94" Width="426" 
                    Click="Button_Click" />
        </Border>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="58" Margin="830,34,37,0">
            <Button Content="Sign out" TabIndex="3" BorderThickness="0" FontSize="25" FontWeight="Bold" Margin="6,0,7,1" Background="#FFDDDDDD" Foreground="Black" Click="Button_Click_3" 
                    Height="50" VerticalAlignment="Bottom" />
        </Border>

    </Grid>
</Window>