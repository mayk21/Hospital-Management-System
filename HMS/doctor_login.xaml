<Window x:Class="HMS.doctor_login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMS"
        mc:Ignorable="d"
             Title="Doctor Login" Height="700" Width="1000" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" ShowInTaskbar="True">

    <Window.Background>
        <ImageBrush ImageSource="media/gradientbg.png"/>
    </Window.Background>
    <Grid>
        <Label Content="Doctor Login" Foreground="Black" FontSize="35" FontWeight="Bold" Margin="380,148,378,0" VerticalAlignment="Top"/>
        <Label Content="Email" Foreground="Black" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="270,247,0,0" VerticalAlignment="Top" Height="38" Width="80"/>
        <Label Content="Password" Foreground="Black" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="270,371,0,0" VerticalAlignment="Top" Width="90"/>

        <Border BorderThickness="3" BorderBrush="Black" CornerRadius="20" VerticalAlignment="Top" Padding="0" Height="48" Margin="270,290,270,0">
            <TextBox Background="Transparent" x:Name="Email" Foreground="Black" TabIndex="1" BorderThickness="0" TextWrapping="Wrap" FontSize="15" VerticalAlignment="Center" Height="28" 
                     RenderTransformOrigin="0.495,0.559" Margin="23,0,23,0"/>
        </Border>

        <Border BorderThickness="3" BorderBrush="Black" CornerRadius="20" VerticalAlignment="Top" Padding="0" Height="48" Margin="270,410,270,0">
            <PasswordBox Background="Transparent" x:Name="Password" Foreground="Black" BorderThickness="0" FontSize="15" TabIndex="2" FontWeight="Bold" VerticalAlignment="Center" Height="28" Margin="23,0,23,0"/>
        </Border>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="40" Margin="346,518,340,0">
            <Button TabIndex="3" BorderThickness="0" FontSize="13" FontWeight="Bold" Margin="6,1,7,1" Background="#FFDDDDDD" Foreground="Black" Click="Button_Click">
                <Image Source="media/log in.png" Height="16" Width="53" RenderTransformOrigin="0.507,0.557" Stretch="Fill"/>
            </Button>
        </Border>

        <Border BorderThickness="3" Background="#FFDDDDDD" BorderBrush="LightGray" CornerRadius="10" VerticalAlignment="Top" Padding="0" Height="72" Margin="877,34,37,0">
            <Button TabIndex="3" BorderThickness="0" FontSize="13" FontWeight="Bold" Margin="6,1,7,1" Background="#FFDDDDDD" Foreground="Black" Click="Button_Click_1" >
                <Image Source="media/homepage logo.png" Height="40" Width="51" RenderTransformOrigin="0.507,0.557" Stretch="Fill"/>
            </Button>
        </Border>

    </Grid>
</Window>